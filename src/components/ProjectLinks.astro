---
import type { IProjectLinks } from "../utils/types";
import CustomActionBtn from "./CustomActionBtn.astro";

interface Props {
  links: IProjectLinks[];
}

const { links } = Astro.props;
---

<div class="flex gap-6 items-center justify-center flex-wrap">
  {
    links.map((link) => (
      <a href={link.href} target="_blank">
        <CustomActionBtn className="rounded">
          {link.label}
          <link.icon class="size-4" />
        </CustomActionBtn>
      </a>
    ))
  }
</div>
