---
import "./hero.css";
import Badge from "../../components/Badge.astro";
import CopyEmailBtn from "../../components/CopyEmailBtn.astro";
import DownloadCVBtn from "../../components/DownloadCVBtn.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import KeyWord from "../KeyWord.astro";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<section id="top" class="flex flex-col justify-center pt-28">
  <div class="flex gap-5 items-center image-profile">
    <img
      src="/profile_image.png"
      alt={t("hero.image.profile.alt")}
      class="size-20 object-cover rounded-full"
    />
    <div class="flex gap-3 badge-container">
      <Badge label={t("hero.badge.webpages")} />
      <Badge label={t("hero.badge.apps")} />
      <Badge label={t("hero.badge.database")} />
      <Badge label={t("hero.badge.design")} />
    </div>
  </div>

  <span class="text-6xl my-6 text-purple-300 font-medium greeting-title"
    >{t("hero.greeting")}</span
  >

  <article class="max-w-2xl">
    <p class="text-xl text-gray-400">
      <KeyWord word={t("hero.years.of.experience")} />
      {t("hero.description")}
    </p>
  </article>

  <div class="flex gap-2 mt-6 actions-btn-container">
    <CopyEmailBtn />
    <DownloadCVBtn />
  </div>
</section>
