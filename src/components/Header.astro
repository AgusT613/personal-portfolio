---
import navItems from "../utils/navItems";
---

<header
  id="nav_header"
  class="flex justify-center items-center w-full fixed z-50"
>
  <nav class="flex gap-8 py-2 px-6 rounded-full mt-2 backdrop-blur-md">
    {
      navItems.map((item) => (
        <a
          href={item.id}
          class="transition-colors text-sm tracking-wide hover:text-blue-400 hover:scale-110"
          aria-label={item.label}
        >
          {item.title}
        </a>
      ))
    }
  </nav>
</header>
