---
import ICONS from "../utils/icons";
import FOOTER_LINKS from "../utils/footerLinks";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<footer class="px-3 py-6 flex justify-center items-center gap-10 footer">
  <!-- Contact Me Section -->
  <section id="contact" class="flex items-center justify-center gap-6">
    <h2 class="text-lg text-center tracking-wider contact-title">
      {t("header.contact")}
    </h2>
    {
      FOOTER_LINKS.map((link) => (
        <a href={link.href} class="hover:scale-110" target="_blank">
          <link.icon class="size-6 footer-icon-url" />
        </a>
      ))
    }
  </section>
  <div class="separate-line"></div>
  <span
    class="text-lg flex items-center justify-center gap-5 tracking-wider text-purple-300 developed-with-title"
  >
    {t("footer.portfolio.develop.with.title")}
    <a href="https://astro.build/" class="hover:scale-110" target="_blank">
      <ICONS.AstroIcon class="size-6 footer-icon-url" />
    </a>
  </span>
</footer>

<style>
  .footer {
    grid-area: footer;
    background: #222b3c;
  }

  .separate-line {
    font-size: 1rem;
  }

  .separate-line:after {
    content: "";
    border-radius: 1rem;
    display: block;
    background: #fff;
    height: 2rem;
    width: 2px;
  }

  @media (width <= 700px) {
    .contact-title,
    .developed-with-title {
      font-size: 1rem;
    }

    .footer-icon-url {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (width <= 600px) {
    .footer {
      flex-direction: column;
      gap: 1rem;
    }

    .separate-line:after {
      width: 17rem;
      height: 2px;
    }
  }

  @media (width <= 350px) {
    .contact-title,
    .developed-with-title {
      font-size: 0.85rem;
    }

    .separate-line:after {
      width: 15rem;
    }

    .footer-icon-url {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
